{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2019",
        "noImplicitAny": false,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "service-account-key.json"],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "**/node_modules",
      "**/seeders",
      "**/test"
    ]
}